<!-- Modal direct upload -->
<div class="modal" id="modal-direct-upload" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only"></span></button>
                <h4 class="modal-title" id="modal-direct-upload-title" data-idle="@Resource.Upload_directly" data-working="@Resource.Uploading">@Resource.Upload_directly</h4>
            </div>
            <div class="modal-body">
                <div class="col-xs-12 modal-form-message-container" id="modal-upload-directly-error-container" data-cancel="@Resource.Upload_aborted" data-length="@Resource.File_name_must_be_between_1_and_150_characters_long" data-error="@Resource.An_unexpected_error_has_occurred_Please_try_again" data-errorapi="@Resource.HTML5_is_not_fully_supported_in_your_browser" style="display:none;">
                    <div class="alert alert-danger">
                    </div>
                </div>

                <div class="col-xs-12" id="modal-upload-directly-container-idle">
                    <div id="modal-upload-directly-note-container">
                        <div class="note-default" style="margin-top:15px;">
                            @Resource.You_can_only_upload [<span style="color: #e74c3c;">1</span>] @Resource.File_at_a_time
                            <i class="fa fa-info-circle pull-right note-icon-info"></i>
                        </div>

                        <div class="note-default" style="margin-top:10px;">
                            @Resource.The_file_size_can_be_a_maximum_of [<span style="color: #e74c3c;">100 MB</span>].
                            <i class="fa fa-info-circle pull-right note-icon-info"></i>
                        </div>

                        <div class="note-default" style="margin: 10px 0px 30px 0px;">
                            @Resource.The_file_is_only_stored_in [<span style="color: #e74c3c;">24</span>] @Resource.Hours
                            <i class="fa fa-info-circle pull-right note-icon-info"></i>
                        </div>
                    </div>

                    <a class="file-input-wrapper btn btn-primary btn-lg btn-block modal-btn-spin" id="modal-upload-directly-file-input-wrapper">
                        <p style="display:inline-block; margin-bottom:0px;">@Resource.Select_file</p>
                        <input type="file" id="modal-upload-directly-file-input">
                        <span id="modal-upload-directly-file-spin" class="spinner-modal" style="display:none;"></span>
                    </a>
                </div>

                <div class="col-xs-12" id="modal-upload-directly-container-working" style="display:none;">
                    <div class="progress" style="margin-top:6px; margin-bottom:10px;">
                        <div id="upload-directly-progressbar" class="progress-bar" role="progressbar" aria-valuenow="5" aria-valuemin="5" aria-valuemax="100" style="margin-bottom:5px;">
                            <span id="#upload-directly-progressbar-information">0%</span>
                        </div>
                    </div>

                    <br />

                    <button disabled id="modal-upload-directly-cancel-upload-btn" type="button" class="btn btn-danger btn-lg btn-block modal-btn-spin">
                        <p style="display:inline-block; margin-bottom:0px;">@Resource.Cancel</p>
                        <span id="modal-upload-directly-complete-file-spin" class="spinner-modal" style="display:none;"></span>
                    </button>
                </div>

                <div class="modal-footer" id="modal-upload-directly-footer" style="border: 0px;">
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal direct upload complete -->
<div class="modal" id="modal-direct-upload-complete" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only"></span></button>
                <h4 id="modal-direct-upload-complete-title" data-sharefile="@Resource.Share_file" class="modal-title"></h4>
            </div>

            <div class="modal-body">
                <div id="modal-upload-directly-complete-container">
                </div>
            </div>

            <div class="modal-footer" id="modal-upload-directly-complete-footer" style="border: 0px;">
            </div>
        </div>
    </div>
</div>

