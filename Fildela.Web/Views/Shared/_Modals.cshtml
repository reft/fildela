                                    <span id="modal-sign-in-page-load-btn-text" data-redirecting="@Resource.Redirecting">@Resource.Sign_in</span>
                                    <span id="modal-sign-in-page-load-submit-spin" class="spinner-modal" style="display:none;"></span>
                                </button>
                                <span class="pull-right modal-sign-in-page-load-register"><a style="cursor:pointer;">@Resource.Create_account</a></span><span class="modal-sign-in-page-load-reset-password"><a style="cursor:pointer;">@Resource.Forgot_password</a></span>
