                                <span id="modal-sign-in-page-load-google-spin" class="spinner-modal spinner-modal-sm" style="display:none;"></span>
                            </a>
                        </div>

                        <div class="col-sm-6 col-xs-12">
                            <a href="/user/ExternalAuthentication?provider=Facebook&returnURL=@Request.QueryString["ReturnUrl"]" class="btn btn-facebook btn-block modal-sign-in-facebook-btn">
                                <i class="fa fa-facebook btn-sm-icons"></i>
                                <span class="modal-sign-in-facebook-sm-text sm-text">Facebook</span>
                                <span id="modal-sign-in-page-load-facebook-spin" class="spinner-modal spinner-modal-sm" style="display:none;"></span>
                            </a>
                        </div>
                    </div>

                    <div class="col-xs-12">
                        <div class="or-container">
                            <hr class="or-hr" />
                            <div id="or">@Resource.Or</div>
                        </div>
                    </div>

                    <div class="col-xs-12" style="padding-top:15px;" id="modal-sign-in-page-load-form-container">
                        <form id="modal-sign-in-page-load-form" class="form-horizontal" data-error="@Resource.An_unexpected_error_has_occurred_Please_try_again">
                            @Html.AntiForgeryToken()

                            <div class="form-group form-group-container">
                                <select id="modal-sign-in-page-load-input-select" class="form-control input-lg select modal-sign-in-page-load-input" name="UserType">
                                    @if (HttpContext.Current.Request.Cookies["SignInUserType"] != null && HttpContext.Current.Request.Cookies["SignInUserType"].Value == "Guest")
