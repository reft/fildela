@model Fildela.Web.Models.AccountModels.LogsViewModel

<div class="container" style="padding:0px;">
    @Html.Partial("~/Views/Account/Partials/_Header.cshtml")

    <div class="col-lg-3 col-md-3 hidden-sm hidden-xs">
        <div class="list-group">
            @if (Model != null && Model.Logs != null && Model.Logs.Count > 1)
            {
                <div class="input-group">
                    <span class="input-group-addon" style="background-color:#fff;"><i class="fa fa-search"></i></span>
                    <input type="text" data-table="order-table" class="light-table-filter form-control account-search-input" data-search_gave="@Resource.Search_gave" data-hits="@Resource.Hits" data-hit="@Resource.Hit" placeholder="@Resource.Search">
                    <span class="account-search-focus-border input-group-addon account-search-input-reset" style="background-color:#fff; cursor:pointer; display:none;">
                        <i class="fa fa-times account-search-input-times"></i>
                    </span>
                </div>
            }
            else
            {
                <div class="input-group">
                    <span class="input-group-addon" style="background-color:#fff;"><i class="fa fa-search"></i></span>
                    <input type="text" disabled data-table="order-table" class="light-table-filter form-control account-search-input" data-search_gave="@Resource.Search_gave" data-hits="@Resource.Hits" data-hit="@Resource.Hit" placeholder="@Resource.Search">
                    <span class="disabled account-search-focus-border input-group-addon account-search-input-reset" style="background-color:#fff; cursor:pointer; display:none;">
                        <i class="fa fa-times account-search-input-times"></i>
                    </span>
                </div>
            }
        </div>
    </div>

    @if (Model != null && Model.Logs != null && Model.Logs.Count > 0)
    {
        <div class="col-lg-9 col-md-9 hidden-sm hidden-xs" style="overflow-x: auto;">

            <span class="account-selected-name pull-left"></span>

            <a class="btn btn-default noselect pull-left" style="margin-bottom:6px; margin-right:4px;" role="button"><i class="fa fa-cloud-download fa-fw account-tablemenu-icon" style="margin-right: 2px;"></i>@Resource.Get</a>
            <a class="btn btn-default noselect pull-left account-tablemenu-single" data-toggle="modal" data-target="#modal-account-log-information" style="margin-bottom:6px;" role="button"><i class="fa fa-info-circle fa-fw account-tablemenu-icon" style="margin-left:1px;"></i>@Resource.Information</a>
            <a class="btn btn-default noselect pull-right" data-toggle="modal" data-target="#modal-account-logs-empty" style="margin-bottom:6px;" role="button"><i class="fa fa-trash-o fa-fw account-tablemenu-icon" style="margin-right:1px;"></i>@Resource.Empty</a>
            <a class="btn btn-default noselect pull-right account-tablemenu-multiple" data-toggle="modal" data-target="#modal-account-logs-remove" style="margin-bottom:6px; margin-right:4px;" role="button"><i class="fa fa-times fa-fw account-tablemenu-icon" style="margin-right:-1px;"></i>@Resource.Remove</a>
        </div>
    }

    <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12" style="clear:both;">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="padding:0px;">
            <div class="list-group" style="margin-bottom:0px;">
                @if (Model != null)
                {
                    <a href="/Account/Files" class="list-group-item">
                        <span class="fa fa-file-o fa-fw" style="margin-right: 5px;"></span>@Resource.Files<span class="badge account-badge">@Model.FileCount</span>
                    </a>
                    <a href="/Account/Links" class="list-group-item">
                        <span class="fa fa-link fa-fw" style="margin-right:5px;"></span>@Resource.Links<span class="badge account-badge">@Model.LinkCount</span>
                    </a>
                    <a href="/Account/Guestaccounts" class="list-group-item">
                        <span class="fa fa-users fa-fw" style="margin-right: 5px;"></span>@Resource.Guest_accounts<span class="badge account-badge">@Model.GuestAccountCount</span>
                    </a>
                    <a href="/Account/Logs" class="list-group-item active noselect">
                        <span class="fa fa-file-text-o fa-fw" style="margin-right: 5px; font-size: 14px;"></span>@Resource.Log<span class="badge account-badge">@Model.LogCount</span>
                    </a>
                }
            </div>
        </div>
    </div>

    <div class="col-sm-12 col-xs-12 hidden-lg hidden-md" style="margin-top:20px;">
        <div class="list-group" style="margin-bottom:0px;">
            @if (Model != null && Model.Logs != null && Model.Logs.Count > 1)
            {
                <div class="input-group">
                    <span class="input-group-addon" style="background-color:#fff;"><i class="fa fa-search"></i></span>
                    <input type="text" data-table="order-table" class="light-table-filter form-control account-search-input" data-search_gave="@Resource.Search_gave" data-hits="@Resource.Hits" data-hit="@Resource.Hit" placeholder="@Resource.Search">
                    <span class="account-search-focus-border input-group-addon account-search-input-reset" style="background-color:#fff; cursor:pointer; display:none;">
                        <i class="fa fa-times account-search-input-times"></i>
                    </span>
                </div>
            }
            else
            {
                <div class="input-group">
                    <span class="input-group-addon" style="background-color:#fff;"><i class="fa fa-search"></i></span>
                    <input type="text" disabled data-table="order-table" class="light-table-filter form-control account-search-input" data-search_gave="@Resource.Search_gave" data-hits="@Resource.Hits" data-hit="@Resource.Hit" placeholder="@Resource.Search">
                    <span class="account-search-focus-border input-group-addon account-search-input-reset" style="background-color:#fff; cursor:pointer; display:none;">
                        <i class="fa fa-times account-search-input-times"></i>
                    </span>
                </div>
            }
        </div>
    </div>

    @if (Model != null && Model.Logs != null && Model.Logs.Count > 0)
    {
        <div class="hidden-lg hidden-md col-sm-12 col-xs-12" style="overflow-x: auto; margin-top:20px; margin-bottom:14px;">

            <span class="account-selected-name pull-left"></span>

            <a class="btn btn-default noselect pull-left" style="margin-bottom: 6px; margin-right: 4px;" role="button"><i class="fa fa-cloud-download fa-fw account-tablemenu-icon" style="margin-right: 2px;"></i>@Resource.Get</a>
            <a class="btn btn-default noselect pull-left account-tablemenu-single" data-toggle="modal" data-target="#modal-account-log-information" style="margin-bottom: 6px; margin-right: 4px;" role="button"><i class="fa fa-info-circle fa-fw account-tablemenu-icon" style="margin-right:1px;"></i>@Resource.Information</a>
            <a class="btn btn-default noselect pull-left account-tablemenu-multiple" data-toggle="modal" data-target="#modal-account-logs-remove" style="margin-bottom: 6px; margin-right: 4px;" role="button"><i class="fa fa-times fa-fw account-tablemenu-icon"></i>@Resource.Remove</a>
            <a class="btn btn-default noselect pull pull-left" data-toggle="modal" data-target="#modal-account-logs-empty" style="margin-bottom:6px;" role="button"><i class="fa fa-trash-o fa-fw account-tablemenu-icon"></i>@Resource.Empty</a>
        </div>
    }

    <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 account-table-container" style="overflow-x:auto; margin:0px; padding:0px;">
            <table class="order-table sorted noselect table table-condensed table-bordered table-hover" style="border-color: #428bca; margin:0px;">
                <thead class="noselect">
                    <tr style="color:#fff;">
                        @if (Model != null && Model.Logs != null && Model.Logs.Count > 1)
                        {
                            <th id="account-log-header-pit" class="account-table-header" style="border-left:1px;">@Resource.Point_in_time <i class="fa fa-caret-down"></i></th>
                        }
                        else
                        {
                            <th id="account-log-header-pit" class="account-table-header" style="border-left:1px;">@Resource.Point_in_time <i></i></th>
                        }
                        <th id="account-log-header-user" class="account-table-header">@Resource.User <i></i></th>
                        <th id="account-log-header-event" class="account-table-header">@Resource.Event <i></i></th>
                        <th id="account-log-header-ia" class="account-table-header" style="border-right:1px;">@Resource.Ip_address <i></i></th>
                        <th id="account-log-header-usertype" class="account-table-header" style="border-right:1px;">@Resource.User_type <i></i></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Logs != null && Model.Logs.Count > 0)
                    {
                        foreach (var item in Model.Logs)
                        {
                            <tr class="account-table-tr" style="display: table-row;" data-rowkey="@item.RowKey" data-name="@item.Type" data-nameshorten="@item.Type" data-type="@Resource.Logs2">
                                <td headers="account-log-header-pit" class="account-log-contextmenu">@item.DateTriggered.ToString("yyyy/MM/dd HH:mm tt")</td>
                                <td headers="account-log-header-user" class="account-log-contextmenu">@item.TriggeredByEmail</td>
                                <td headers="account-log-header-event" class="account-log-contextmenu">@item.Type</td>
                                <td headers="account-log-header-ia" class="account-log-contextmenu">@item.IpAddress</td>
                                <td headers="account-log-header-usertype" class="account-log-contextmenu">@item.UserType</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr style="display: table-row; cursor: default;">
                            <td style="border-right:0px;">
                                @Resource.No_logs_was_found
                            </td>
                            <td style="border-left:0px; border-right:0px;"></td>
                            <td style="border-left:0px; border-right:0px;"></td>
                            <td style="border-left:0px; border-right:0px;"></td>
                            <td style="border-left:0px;"></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" id="account-search-message-container" style="overflow-x:auto; margin:0px; padding:0px; display:none;">
            <p class="account-search-message"></p>
        </div>
    </div>
</div>

<div id="account-log-contextmenu" class="dropdown clearfix" style="color: #555;">
    <ul class="dropdown-menu account-dropdown-menu" role="menu" aria-labelledby="dropdownMenu" style="display:block;margin-bottom:5px;">
        <li><a tabindex="-1" data-toggle="modal" data-target="#modal-account-log-information"><i class="fa fa-info-circle fa-fw" style="margin-right: 5px; pointer-events: none; line-height: inherit;"></i>@Resource.Information</a></li>
        <li style="pointer-events:none;" class="divider"></li>
        <li><a tabindex="-1" data-toggle="modal" data-target="#modal-account-logs-remove"><i class="fa fa-times fa-fw" style="margin-right: 5px; pointer-events: none; line-height: inherit;"></i>@Resource.Remove</a></li>
    </ul>
</div>