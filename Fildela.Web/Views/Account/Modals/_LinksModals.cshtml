<!-- Modal account, links, create -->
<div class="modal" id="modal-account-links-file-create" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only"></span></button>
                <h4 class="modal-title">@Resource.Create_link_to_file</h4>
            </div>
            <div class="modal-body">
                <div class="col-xs-12 modal-form-message-container" id="modal-account-links-file-create-success-container" style="display:none;">
                    <div class="alert alert-success">
                    </div>
                </div>

                <div class="col-xs-12 modal-form-message-container" id="modal-account-links-file-create-error-container" style="display:none;">
                    <div class="alert alert-danger">
                    </div>
                </div>

                <div class="col-xs-12" style="padding-top:15px;">
                    <form id="modal-account-links-file-create-form" class="form-horizontal" data-error="@Resource.An_unexpected_error_has_occurred_Please_try_again">
                        @Html.AntiForgeryToken()

                        <div class="form-group form-group-container" id="account-links-create-form-group-container-file">
                            <input type="hidden" id="account-links-create-file" class="modal-account-links-file-create-input" data-placeholder="@Resource.Select_a_file" style="width: 100%;">
                            <input id="account-links-create-file-json" name="File" type="hidden" />
                        </div>
                        <br />

                        <div class="form-group form-group-container form-group-date-picker">
                            <div class='input-group date' id='account-links-create-startdate'>
                                <input id="account-links-create-startdate-text" readonly type='text' name="DateStart" placeholder="@Resource.Start_date" class="form-control modal-account-links-file-create-input" />
                                <span class="input-group-addon input-group-addon-datepicker">
                                    <span class="fa fa-calendar"></span>
                                </span>
                            </div>
                        </div>

                        <div class="form-group form-group-container form-group-date-picker last-form-group">
                            <div class='input-group date' id='account-links-create-enddate'>
                                <input id="account-links-create-enddate-text" readonly type='text' name="DateExpires" placeholder="@Resource.End_date" class="form-control modal-account-links-file-create-input" />
                                <span class="input-group-addon input-group-addon-datepicker">
                                    <span class="fa fa-calendar"></span>
                                </span>
                            </div>
                        </div>
                        <br />

                        <input type="hidden" id="account-links-create-currenttime" name="CurrentTime" />

                        <div class="form-group form-group-container">
                            <button type="submit" class="btn btn-primary btn-lg btn-block modal-account-links-file-create-input modal-btn-spin" id="modal-account-links-file-create-submitbtn">
                                <span>@Resource.Create</span>
                                <span id="modal-account-links-file-create-submit-spin" class="spinner-modal" style="display:none;"></span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer" style="border: 0px;">
            </div>
        </div>
    </div>
</div>

